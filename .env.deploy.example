# Configuración para Deployment
# Copia este archivo a .env.deploy y completa con tus valores

# Google Cloud Project
GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1

# Secrets (estos se crearán en Secret Manager)
OAUTH_CLIENT_ID=123456-abc.apps.googleusercontent.com
GEMINI_API_KEY=your-gemini-api-key
SUPABASE_URL=https://xxx.supabase.co
SUPABASE_KEY=your-supabase-anon-key

# OAuth Configuration
OAUTH_ALLOWED_DOMAINS=miempresa.com,cenf.com.ar,coutinholla.com
OAUTH_ALLOWED_EMAILS=admin@miempresa.com,gonzalo@cenf.com.ar

# Cloud Run Configuration
WORKER_MEMORY=2Gi
WORKER_CPU=2
WORKER_TIMEOUT=900s
WORKER_MAX_INSTANCES=10

API_MEMORY=512Mi
API_CPU=1
API_TIMEOUT=60s
API_MAX_INSTANCES=10

# Cloud Tasks Configuration
TASKS_QUEUE_NAME=document-processing-queue
TASKS_MAX_CONCURRENT=10
TASKS_MAX_RATE=5

# Cloud Scheduler Configuration
SCHEDULER_TIMEZONE=America/Argentina/Buenos_Aires
SCHEDULER_DAILY_CRON="0 8 * * *"
SCHEDULER_WEEKLY_CRON="0 9 * * 1"
SCHEDULER_MONTHLY_CRON="0 10 1 * *"

# Feature Flags
ENABLE_OCR=true
USE_SUPABASE=true

# CORS (separado por comas)
CORS_ALLOWED_ORIGINS=https://tu-frontend.com,http://localhost:3000
