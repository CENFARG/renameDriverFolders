                "model": {
                    "name": "gemini-2.0-flash-exp",
                    "temperature": 0.5,
                    "max_tokens": 4096
                },
                "instructions": "Eres un experto en facturas. Extrae fecha de emisión, proveedor y monto total.",
                "output_schema": {
                    "date": "YYYY-MM-DD",
