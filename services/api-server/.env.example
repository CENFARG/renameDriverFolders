# .env.example - RenameDriverFolders API Server
# Copy this file to .env and fill in your actual values

# ============================================
# OAuth Configuration
# ============================================
# Get this from Google Cloud Console > APIs & Services > Credentials
OAUTH_CLIENT_ID=your-client-id-here.apps.googleusercontent.com

# Comma-separated list of allowed email domains
OAUTH_ALLOWED_DOMAINS=estudioanc.com.ar

# ============================================
# Google Cloud Configuration
# ============================================
GCP_PROJECT_ID=cloud-functions-474716

# Gemini API Key (for AI processing)
GEMINI_API_KEY=your-gemini-api-key-here

# ============================================
# CORS Configuration (for local development)
# ============================================
# Comma-separated list of allowed origins
# For local dev, include localhost URLs
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# ============================================
# Database Configuration (Optional)
# ============================================
USE_SUPABASE=false

# If using Supabase:
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_KEY=your-supabase-anon-key

# ============================================
# Worker Configuration (Optional)
# ============================================
WORKER_URL=http://localhost:8080

# ============================================
# Development Settings
# ============================================
# Set to 'development' for local, 'production' for Cloud Run
ENVIRONMENT=development

# Enable debug logging
DEBUG=true
